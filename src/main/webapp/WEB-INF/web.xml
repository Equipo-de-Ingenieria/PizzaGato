<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ClientSigninServlet</servlet-name>
        <servlet-class>servlets.ClientSigninServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>servlets.OrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CientRedirectServlet</servlet-name>
        <servlet-class>servlets.CientRedirectServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateOrderServlet</servlet-name>
        <servlet-class>servlets.CreateOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientSigninServlet</servlet-name>
        <url-pattern>/ClientSigninServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CommentarieServlet</servlet-name>
        <servlet-class>servlets.CommentarieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentarieServlet</servlet-name>
        <url-pattern>/CommentarieServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/OrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CientRedirectServlet</servlet-name>
        <url-pattern>/CientRedirectServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PizzaMenuServlet</servlet-name>
        <servlet-class>servlets.PizzaMenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PizzaMenuServlet</servlet-name>
        <url-pattern>/PizzaMenuServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateOrderServlet</servlet-name>
        <url-pattern>/CreateOrderServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
